# Scalara Webmail â€” Environment Configuration
# Copy this file to .env and fill in the values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://scalara:your_password@localhost:5432/scalara_db"

# ===========================================
# NEXTAUTH
# ===========================================
NEXTAUTH_URL="https://mail.yourdomain.com"
NEXTAUTH_SECRET="generate-a-secure-random-string-here"

# ===========================================
# MAIL SERVER
# ===========================================
MAIL_DOMAIN="yourdomain.com"
IMAP_HOST="localhost"
IMAP_PORT=993
SMTP_HOST="localhost"
SMTP_PORT=587

# ===========================================
# ENCRYPTION
# ===========================================
ENCRYPTION_KEY="generate-a-32-byte-hex-key-here"

# ===========================================
# APP
# ===========================================
APP_NAME="Scalara"
APP_URL="https://mail.yourdomain.com"
NODE_ENV="production"
